{
  "scripts": {
    "prejs": "mkdir -p www/js",
    "js": "ls -1 source/js/ | xargs -I $ browserify -d source/js/$ -o www/js/$",
    "prejs:production": "npm run js",
    "js:production": "ls www/js/*.js | xargs basename -s .js | xargs -I {} uglifyjs www/js/{}.js -o www/js/{}.min.js",
    "img": "imagemin-newer source/ www/",
    "sass": "node-sass source/scss/ --output-style compressed --include-path node_modules/ -q -o www/css/",
    "html": "static-site -b www -h source/_helpers/*.js -f xml",
    "html:production": "static-site --ENV production",
    "predev": "npm-run-all js img sass html --parallel",
    "dev": "parallelshell 'cd www && live-server --quiet' 'rerun-script'"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "watches": {
    "js": "source/js/**/*.js",
    "img": "source/**/*.{jpg,jpeg,png,svg,gif}",
    "sass": "source/scss/**",
    "html": "source/**/*.{html,md}"
  },
  "dependencies": {
    "inline-block-grid": "git://github.com/paulcpederson/inline-block-grid.git",
    "node-sass": "^3.2.0",
    "scss-utils": "1.0.0"
  },
  "devDependencies": {
    "browserify": "^10.2.4",
    "browserify-directory": "^1.0.2",
    "imagemin-newer": "^1.0.1",
    "live-server": "^0.7.1",
    "npm-run-all": "^1.2.6",
    "parallelshell": "^1.1.1",
    "rerun-script": "^0.6.0",
    "static-site": "*",
    "uglifyjs": "^2.4.10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/paulcpederson/blog.git"
  }
}
