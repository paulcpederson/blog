{
  "scripts": {
    "js": "simplifyify source/js/*.js -b -d -w -o www/js/",
    "js:production": "simplifyify source/js/*.js -b -m -o www/js/",
    "sass": "node-sass source/scss/ --output-style compressed --source-map www/css/ -o www/css/ --include-path node_modules/",
    "postsass": "postcss -u autoprefixer -r www/css/*.css",
    "img": "imagemin-newer source/ www/",
    "html": "static-site -b www -h source/_helpers/*.js -f xml",
    "copy": "copyfiles -u 1 'source/**/*.{ico,mp4,mp3,woff,woff2,vtt,pdf}' www/",
    "prestart": "npm-run-series img sass html copy",
    "start": "parallelshell 'live-server www/ --port=7777 --no-browser' 'rerun-script' 'npm run sass -- -w' 'npm run js'",
    "predeploy": "npm-run-series js:production img sass copy && npm run html -- --production",
    "deploy": "surge www/ paulcpederson.com",
    "test": "a11y 'www/**/*.html'"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "watches": {
    "copy": "source/**/*.{ico,mp4,woff,woff2}",
    "img": "source/**/*.{jpg,jpeg,png,svg,gif}",
    "html": [
      "source/**/*.{html,md,xml,svg}",
      "source/_helpers/**"
    ]
  },
  "dependencies": {
    "barba.js": "^1.0.0",
    "esri-leaflet": "^1.0.0-rc.8",
    "inline-block-grid": "git://github.com/paulcpederson/inline-block-grid.git",
    "leaflet": "^0.7.3",
    "three": "^0.81.2",
    "tone": "^0.7.1"
  },
  "devDependencies": {
    "a11y": "^0.4.1",
    "autoprefixer": "^6.3.3",
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "chartist": "^0.9.7",
    "copyfiles": "^1.0.0",
    "delaunay-fast": "^1.0.1",
    "imagemin-newer": "^1.0.1",
    "live-server": "^0.9.1",
    "node-sass": "^3.2.0",
    "npm-run-series": "^1.0.0",
    "parallelshell": "^1.1.1",
    "postcss-cli": "^2.5.1",
    "rerun-script": "^0.6.0",
    "simplifyify": "^2.0.1",
    "static-site": "^1.3.1",
    "surge": "^0.17.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/paulcpederson/blog.git"
  }
}
