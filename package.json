{
  "scripts": {
    "prejs": "mkdir -p www/js",
    "js": "simplifyify source/js/*.js -d -m -o www/js/",
    "js:watch": "npm run js -- -w",
    "img": "imagemin-newer source/ www/",
    "sass": "node-sass source/scss/ --output-style compressed --include-path node_modules/ -q -o www/css/",
    "html": "static-site -b www -h source/_helpers/*.js -f xml",
    "cp": "cp -r source/fonts/ www/fonts/ && cp source/img/favicon.ico www/img/favicon.ico",
    "prestart": "npm-run-all js img sass html cp --parallel",
    "start": "parallelshell 'live-server www/' 'rerun-script' 'npm run js:watch'",
    "predeploy": "npm-run-all js img sass cp --parallel && npm run html -- --PRD",
    "deploy": "surge www/ paulcpederson.com"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "watches": {
    "img": "source/**/*.{jpg,jpeg,png,svg,gif}",
    "sass": "source/scss/**",
    "html": [
      "source/**/*.{html,md,xml}",
      "source/_helpers/**"
    ]
  },
  "dependencies": {
    "esri-leaflet": "^1.0.0-rc.8",
    "inline-block-grid": "git://github.com/paulcpederson/inline-block-grid.git",
    "leaflet": "^0.7.3"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "imagemin-newer": "^1.0.1",
    "live-server": "^0.9.1",
    "node-sass": "^3.2.0",
    "npm-run-all": "^1.2.6",
    "parallelshell": "^1.1.1",
    "rerun-script": "^0.6.0",
    "scss-utils": "1.0.0",
    "simplifyify": "^1.3.0",
    "static-site": "^1.1.0",
    "surge": "^0.17.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/paulcpederson/blog.git"
  }
}
